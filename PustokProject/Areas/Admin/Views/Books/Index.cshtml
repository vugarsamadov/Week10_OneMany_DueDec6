@using PustokProject.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model VM_BooksIndex;

<div class="container-fluid">
    <a asp-action="CreateBook" class="btn btn-success">Create</a>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>DiscountedPrice</th>
                        <th>ProductCode</th>
                        <th>IsAvailable</th>
                        <th>ProductCode</th>
                        <th>Brand</th>
                        <th>Category</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model.Books)
                    {
                        <tr colspan="2">
                            <td>@book.Id</td>
                            <td>@book.Name</td>
                            <td>@book.Description</td>
                            <td>@book.Price</td>
                            <td>@book.DiscountedPrice</td>
                            <td>@book.ProductCode</td>
                            <td>@book.IsAvailable</td>
                            <td>@book.ProductCode</td>
                            <td>@book.Brand.Name</td>
                            <td>@book.Category.Name</td>
                            <td><a asp-area="Admin" asp-controller="Books" asp-action="UpdateBook" asp-route-id="@book.Id" class="btn btn-warning">Edit</a></td>
                            <td><a asp-area="Admin" asp-controller="Books" asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>